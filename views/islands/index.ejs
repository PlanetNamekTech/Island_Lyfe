<% include ../partials/header %>


<div class="container">
    <header class="jumbotron">
            <div class="container">
                <h1>Welcome to Island Lyfe!</h1>
                <p>View the most beautiful islands our planet has to offer!</p>
                <p>
                    <a class="btn btn-primary btn-lg" href="/islands/new">Add new Island</a>
                </p>
            </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% islands.forEach((island)=>{ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= island.image %>">
                    <div class="caption">
                        <h4><%= island.name %></h4>
                    </div>
                    <p>
                        <a href="/islands/<%= island._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    
    </div>
    
</div>

<% include ../partials/footer %>